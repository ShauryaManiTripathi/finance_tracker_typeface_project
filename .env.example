# ====================================
# UNIFIED ENVIRONMENT VARIABLES
# ====================================
# Copy this file to .env and adjust values as needed
# This single .env file is used by both backend (API) and frontend (Web)

# ====================================
# DATABASE (Backend)
# ====================================
DATABASE_URL="postgresql://finance_user:finance_password@localhost:5432/finance_db"
TEST_DATABASE_URL="postgresql://finance_user_test:finance_password_test@localhost:5433/finance_db_test"

# ====================================
# JWT AUTHENTICATION (Backend)
# ====================================
JWT_SECRET="your-super-secure-jwt-secret-change-in-production"
JWT_EXPIRES_IN="7d"

# ====================================
# SERVER CONFIGURATION (Backend)
# ====================================
PORT=3001
NODE_ENV="development"

# ====================================
# CORS (Backend)
# ====================================
CORS_ORIGIN="http://localhost:5173"

# ====================================
# GEMINI AI (Backend - Vision API)
# ====================================
GEMINI_API_KEY="your-gemini-api-key-from-aistudio"
GEMINI_DEFAULT_MODEL="gemini-2.0-flash-exp"
GEMINI_FALLBACK_MODEL="gemini-2.5-flash"
AI_PREVIEW_TTL_SEC=900

# ====================================
# UPLOAD LIMITS (Backend)
# ====================================
MAX_RECEIPT_SIZE_MB=10
MAX_STATEMENT_SIZE_MB=20

# ====================================
# RATE LIMITING (Backend)
# ====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================================
# API CONFIGURATION (Frontend)
# ====================================
# Note: Frontend uses VITE_ prefix for environment variables
VITE_API_BASE_URL=http://localhost:3001/api