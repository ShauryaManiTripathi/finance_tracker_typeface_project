# ====================================
# TEST ENVIRONMENT VARIABLES (EXAMPLE)
# ====================================
# Copy this file to .env.test for running tests
# The test environment uses a separate database instance

# ====================================
# ENVIRONMENT
# ====================================
NODE_ENV=test

# ====================================
# DATABASE (Testing)
# ====================================
# Uses port 5433 to avoid conflicts with development database (5432)
DATABASE_URL="postgresql://finance_user_test:finance_password_test@localhost:5433/finance_db_test"
TEST_DATABASE_URL="postgresql://finance_user_test:finance_password_test@localhost:5433/finance_db_test"

# ====================================
# JWT AUTHENTICATION (Testing)
# ====================================
# Use a different secret for testing
JWT_SECRET="test-jwt-secret-for-testing-purposes-only-32-chars-minimum"
JWT_EXPIRES_IN="7d"

# ====================================
# SERVER CONFIGURATION (Testing)
# ====================================
# Use different port to avoid conflicts with dev server
PORT=3002
CORS_ORIGIN="http://localhost:5173"

# ====================================
# GEMINI AI (Testing - Optional)
# ====================================
# AI tests are typically disabled to speed up test execution
# Use dummy key or real key if you want to test AI features
GEMINI_API_KEY="no-need-of-api-LLM-tests-are-disabled-due-to-time-consuming-nature-of-LLM-calls"
GEMINI_DEFAULT_MODEL="gemini-2.5-flash-lite"
GEMINI_FALLBACK_MODEL="gemini-2.5-flash-lite"
AI_PREVIEW_TTL_SEC=900

# ====================================
# UPLOAD LIMITS (Testing)
# ====================================
MAX_RECEIPT_SIZE_MB=10
MAX_STATEMENT_SIZE_MB=20

# ====================================
# RATE LIMITING (Testing)
# ====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5000
